@using OrchardCore.RAQModule.Models
@model OrchardCore.RAQModule.ViewModels.RAQModulePartSettingsViewModel

<script asp-name="codemirror" depends-on="admin" at="Foot"></script>
<script asp-name="codemirror-mode-javascript" at="Foot"></script>
<script asp-name="codemirror-addon-display-autorefresh" at="Foot"></script>
<script asp-name="codemirror-addon-mode-simple" at="Foot"></script>
<script asp-name="codemirror-addon-mode-multiplex" at="Foot"></script>
<script asp-name="codemirror-mode-xml" at="Foot"></script>

<script asp-src="~/OrchardCore.Liquid/codemirror/liquid.js" at="Foot"></script>

<div class="row col-sm-6 mb-3">
    <label asp-for="Options">@T["Options"]</label>
    <select asp-for="Options" class="form-control">
        <option value="@RAQModuleOptions.Editable" selected="@(Model.Options == RAQModuleOptions.Editable)">@T["Button Title is editable"]</option>
        <option value="@RAQModuleOptions.GeneratedDisabled" selected="@(Model.Options == RAQModuleOptions.GeneratedDisabled)">@T["Button Title is generated and input is disabled"]</option>
        <option value="@RAQModuleOptions.GeneratedHidden" selected="@(Model.Options == RAQModuleOptions.GeneratedHidden)">@T["Button Title is generated and input is hidden"]</option>
    </select>
</div>

